{
  "$id": "wordpressWooCommerceConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Wordpress WooCommerce Connector",
  "entityType": "product",
  "source": {
    "sourceConfig": {
      "nativeSourceConfig": {
        "source": "wordpress",
        "operation": "fetchContent",
        "inputs": {
          "contentType": "product",
          "wordpressFullDomain": "https://danafesjian.wpcomstaging.com/"
        }
      }
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "id",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "date",
        "path": "date"
      },
      {
        "type": "JSON",
        "header": "link",
        "path": "link"
      },
      {
        "type": "JSON",
        "header": "Product Name",
        "path": "title.rendered"
      },
      {
        "type": "JSON",
        "header": "Product Description",
        "path": "content.rendered"
      },
      {
        "type": "JSON",
        "header": "Product Image",
        "path": "_embedded.\"wp:featuredmedia\"[].source_url"
      },
      {
        "type": "JSON",
        "header": "Product Category",
        "path": "_embedded.\"wp:term\"[0][].name"
      },
      {
        "type": "JSON",
        "header": "Product Tag",
        "path": "_embedded.\"wp:term\"[1][].name"
      }
    ]
  },
  "transforms": [
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "date"
          ]
        },
        "plugin": "idTransform",
        "function": "formatDate"
      }
    }
  ],
  "mappings": [
    {
      "field": "productHighlights",
      "header": "Product Tag",
      "subfieldPath": []
    },
    {
      "field": "primaryPhoto",
      "header": "Product Image",
      "subfieldPath": [
        {
          "name": "image"
        },
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "name",
      "header": "Product Name",
      "subfieldPath": []
    },
    {
      "field": "landingPageUrl",
      "header": "link",
      "subfieldPath": []
    },
    {
      "field": "c_productCategory",
      "header": "Product Category",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "id",
      "subfieldPath": []
    },
    {
      "field": "richTextDescription",
      "header": "Product Description",
      "subfieldPath": []
    },
    {
      "field": "availabilityDate",
      "header": "date",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "Pacific/Easter",
      "startDate": "2022-08-19",
      "startTime": "23:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  }
}
