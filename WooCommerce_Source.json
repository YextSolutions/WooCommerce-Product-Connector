{
  "id": "woocommerce",
  "name": "WooCommerce",
  "logo": "woocommerce_logo.svg",
  "operation": [
    {
      "id": "fetchProducts",
      "name": "Fetch Products",
      "productFeatureId" : [540],
      "configuration": {
        "apiConfig": {
          "method": "GET",
          "url": "[[wordpressFullDomain]]/wp-json/wc/v3/products",
          "authentication": {
            "basicAuthentication": {
              "username": "[[wooCommerceUsername]]",
              "password": "[[wooCommercePassword]]"
            }
          },
          "paginationControl": {
            "cursorPagination": {
              "cursor": "link",
              "cursorType": "FULL_URL",
              "detectCursorInHeader": true
            }
          },
          "headers": {},
          "queryParams": {},
          "format": "JSON"
        }
      },
      "baseSelector": {
        "jsonSelector": {
          "label": "Entity Container",
          "content": "[*]"
        }
      },
      "input": [
        {
          "id": "wordpressFullDomain",
          "name": "WordPress Full Domain",
          "tooltip": "Use your full WordPress URL, e.g. https://www.yext.com",
          "typeId": "type.string",
          "type": {
            "stringType": {
              "stereotype": "SIMPLE",
              "maxLength": 255,
              "contentFlags": {
                "noHtmlTags": true
              }
            }
          },
          "sensitive": false
        },
        {
          "id": "wooCommerceUsername",
          "name": "Username",
          "tooltip": "Use your Consumer key from the WooCommerce REST API key generator.",
          "typeId": "type.string",
          "sensitive": false
        },
        {
          "id": "wooCommercePassword",
          "name": "Password",
          "tooltip": "Use your Consumer secret from the WooCommerce REST API key generator.",
          "typeId": "type.string",
          "sensitive": true
        }  
      ]
    }
  ]
}
